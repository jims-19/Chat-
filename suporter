<script>
  const securityCategory = document.getElementById('security-category');
  const termsPage = document.getElementById('terms-page');
  const supportMain = document.getElementById('support-main');
  const backToSupportBtn = document.getElementById('back-to-support');

  function showTerms() {
    supportMain.style.display = 'none';
    termsPage.style.display = 'block';
    termsPage.focus();
  }

  function showSupportMain() {
    termsPage.style.display = 'none';
    supportMain.style.display = 'block';
  }

  securityCategory.addEventListener('click', showTerms);
  securityCategory.addEventListener('keydown', (e) => {
    if(e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      showTerms();
    }
  });

  backToSupportBtn.addEventListener('click', showSupportMain);
</script>
